<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        tools:context=".HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingBottom="80dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardElevation="4dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:id="@+id/txt_welcome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Welcome, Name"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="test@email.com"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:background="@color/card_stroke" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <Button
                                    android:id="@+id/btn_view_profile"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="View Profile"
                                    android:textColor="@color/maroon" />

<!--                            <Button-->
<!--                                    android:id="@+id/btn_edit_profile"-->
<!--                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--                                    android:layout_width="0dp"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_marginStart="8dp"-->
<!--                                    android:layout_weight="1"-->
<!--                                    android:text="Edit Profile"-->
<!--                                    android:textColor="@color/maroon" />-->
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Important Announcements"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_announcement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardElevation="2dp"
                        android:visibility="gone">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:id="@+id/txt_announcement_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Scheduled Power Outage"
                                android:textColor="@color/maroon"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/txt_announcement_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="March 30, 2025"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        <TextView
                                android:id="@+id/txt_announcement_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="There will be a scheduled power interruption from 9:00 AM to 3:00 PM for electrical maintenance in the area."
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                        <Button
                                android:id="@+id/btn_view_all_announcements"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="View All"
                                android:textColor="@color/maroon" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_no_announcement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardElevation="2dp"
                        android:visibility="gone">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="24dp"
                            android:gravity="center"
                            android:text="There are no announcements lately! Stay tuned"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <!-- Community Section Header -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Community"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <!-- Community Post Container -->
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp">
                    <androidx.cardview.widget.CardView
                            android:id="@+id/card_community"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="12dp"
                            app:cardBackgroundColor="@color/surface_variant"
                            app:cardElevation="2dp"
                            tools:visibility="visible">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp">

                            <LinearLayout
                                    android:id="@+id/community_post_header"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentTop="true"> {/* Anchored to top */}

                                <TextView
                                        android:id="@+id/community_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Juan Dela Cruz"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                <TextView
                                        android:id="@+id/community_post_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="Posted 2 hours ago"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />
                            </LinearLayout>

                            <TextView
                                    android:id="@+id/community_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/community_post_header"
                                    android:layout_marginTop="8dp"
                                    tools:text="Suggestion for Basketball Court Schedule"
                                    android:textColor="@color/maroon"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:ellipsize="end" />

                            <TextView
                                    android:id="@+id/community_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/community_title"
                                    android:layout_marginTop="4dp"
                                    tools:text="Maybe we can have a schedule for using the court? It gets crowded sometimes, especially on weekends. What do you guys think?"
                                    android:textColor="@color/text_primary"
                                    android:textSize="13sp"
                                    android:maxLines="3"
                                    android:ellipsize="end" />

                            <ImageView
                                    android:id="@+id/ivPostImageDashboard"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:visibility="gone"
                                    android:layout_below="@id/community_description"
                                    android:layout_marginTop="10dp"
                                    android:contentDescription="Post image on dashboard"
                                    tools:srcCompat="@tools:sample/backgrounds/scenic"
                                    tools:visibility="visible" />

                            <LinearLayout
                                    android:id="@+id/community_reaction_stats"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/ivPostImageDashboard"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                <TextView
                                        android:id="@+id/like_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_thumb_up"
                                        android:drawableTint="@color/text_secondary"
                                        android:drawablePadding="4dp"
                                        tools:text="15 likes"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp" />

                                <TextView
                                        android:id="@+id/comment_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="16dp"
                                        android:drawableStart="@drawable/ic_comment"
                                        android:drawableTint="@color/text_secondary"
                                        android:drawablePadding="4dp"
                                        tools:text="4 comments"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                    android:id="@+id/community_reaction_buttons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/community_reaction_stats"
                                    android:layout_marginTop="8dp"
                                    android:visibility="gone"
                                    android:orientation="horizontal">

                                {/* Buttons would go here, but are hidden for dashboard preview */}
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Recent News &amp; Events"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_news" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardElevation="2dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="visible"> <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/img_news"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/barangay360_logo" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:id="@+id/txt_news_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Event Title"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <TextView
                                android:id="@+id/txt_news_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                tools:text="Event Date and Time"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        <TextView
                                android:id="@+id/txt_news_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                tools:text="Event summary goes here..."
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        <Button
                                android:id="@+id/btn_view_all_news"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="View All Events"
                                android:textColor="@color/maroon" />
                    </LinearLayout>
                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                        android:id="@+id/txt_no_upcoming_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No upcoming events!"
                        android:gravity="center"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/some_header_above_event_card" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Emergency Contacts"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:cardElevation="2dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/barangay360_logo"
                                    app:tint="@color/maroon" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_weight="1"
                                    android:text="Barangay Hall"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                            <TextView
                                    android:id="@+id/contact_barangay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(02) 8123-4567"
                                    android:textColor="@color/maroon"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                        </LinearLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/card_stroke" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/barangay360_logo"
                                    app:tint="@color/maroon" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_weight="1"
                                    android:text="Police Station"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                            <TextView
                                    android:id="@+id/contact_police"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(02) 8911-1234"
                                    android:textColor="@color/maroon"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                        </LinearLayout>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/card_stroke" />

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/barangay360_logo"
                                    app:tint="@color/maroon" />

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_weight="1"
                                    android:text="Fire Station"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                            <TextView
                                    android:id="@+id/contact_fire"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(02) 8929-3456"
                                    android:textColor="@color/maroon"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>