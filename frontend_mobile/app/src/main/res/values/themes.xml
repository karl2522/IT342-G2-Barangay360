<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base light application theme -->
    <style name="Theme.Barangay360Mobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Barangay360Mobile.Splash" parent="Theme.Barangay360Mobile">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- QR Code Scanner theme -->
    <style name="Theme.Barangay360Mobile.Scanner" parent="Theme.Barangay360Mobile">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Dialog animation style -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>