<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <solid android:color="#20000000"/> <!-- Shadow color (semi-transparent black) -->
            <padding android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Main EditText Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Same rounding -->
            <solid android:color="@color/white"/> <!-- EditText background -->
            <stroke android:color="#E0E0E0" android:width="1dp" />
        </shape>
    </item>

</layer-list>
