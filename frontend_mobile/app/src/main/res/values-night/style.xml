<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for NavigationView in dark mode -->
    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.NavigationView</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorPrimary">@color/maroon</item>
        <item name="colorSurface">@color/dark_background</item>
    </style>

    <!-- Style for BottomNavigationView in dark mode -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/dark_background</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_dark</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_dark</item>
    </style>

    <!-- Style for BottomAppBar in dark mode -->
    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/dark_background</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/maroon</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Custom tab style for Services fragment -->
    <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/maroon</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/maroon</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>